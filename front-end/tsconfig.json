{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    /*./dist/out-tsc -> build */
    "outDir": "../build",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    /*esnext -> commonjs */
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": [
    "../front-end/node_modules"
  ]
}
